<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - QLBH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            margin: 0;
        }

        main {
            flex: 1;
        }
        /* Một số style tùy chỉnh */
        .navbar-brand {
            font-weight: bold;
        }

        footer {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <!-- Header: Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">QLBH</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/ProductPage">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/About">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Contact">Liên hệ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content: RenderBody() -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer cố định -->
    <footer class="border-top text-muted py-3">
        <div class="container">
            &copy; 2025 - QLBH - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
